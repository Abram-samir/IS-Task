@page
@model InnovationTask.Areas.Identity.Pages.Message.MessageModel
@{
}
<h1 style="color: #0366D6">Innovation Strategy Task</h1>

<div class="row">
    
    <br />
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.PhoneMessage.message" class="control-label">Message</label>
                <br />
                <textarea asp-for="@Model.PhoneMessage.message" placeholder="Enter Your Message Here" style="width:400px;height:100px"></textarea>
                <span asp-validation-for="@Model.PhoneMessage.message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-primary" />
            </div>
            <p style="color:#0366D6">
                @ViewData["UserMessage"]

            </p>
        </form>
    </div>
</div>